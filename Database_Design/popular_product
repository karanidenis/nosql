// find product with most transactions
db.transactions.aggregate([
  { $group: { _id: "$product_id", count: { $sum: 1 } } },
  { $sort: { count: -1 } },
  { $limit: 1 },
  {
    $lookup: {
      from: "products",
      localField: "_id",
      foreignField: "_id",
      as: "product",
    },
  },
  { $unwind: "$product" },
  { $project: { _id: 0, product: 1, count: 1 } },
]);